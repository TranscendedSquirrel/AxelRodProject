basic.forever(() => {
    basic.showString("HELLO, PRISONER.")
    basic.showString("TO PLAY, PRESS EITHER THE A BUTTON TO BE 'SILENT' OR THE B BUTTON TO 'BETRAY'.")
    basic.showString("YOU HAVE GAINED 0 YEARS. YOU CHOSE TO BETRAY WHEREAS THE OTHER PRISONER CHOSE TO BE SILENT.")
    basic.showString("YOU HAVE GAINED 1 YEARS. YOU BOTH CHOSE TO BE SILENT.")
    basic.showString("YOU HAVE GAINED 2 YEARS. YOU BOTH CHOSE TO BETRAY EACH OTHER.")
    basic.showString("YOU HAVE GAINED 3 YEARS. YOU CHOSE TO BE SILENT BUT THE OTHER PRISONER CHOSE TO BETRAY.")
})
